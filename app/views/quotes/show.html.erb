<div class="col-md-10 col-md-offset-1">
<p>
<blockquote><div class="quote">
  </div>
  <button class="btn btn-primary pull-right" id= "newQuote">New Quote<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </button>
  <% if current_user %>
  
    <%= button_to root_path, class: "btn btn-primary pull-right", remote: true,
          id: "tweetQuote", method: :post do %>
      Tweet <span class="fa fa-twitter"></span>
    <% end %>
  <% end %>
</p>
<footer class="author"></footer></blockquote>
</div>